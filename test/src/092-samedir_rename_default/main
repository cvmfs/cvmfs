cvmfs_test_name="Rename across directories in the cache space"
cvmfs_test_suites="quick"

cvmfs_run_test() {
  logfile=$1

  local repo="atlas.cern.ch"

  echo "Mount repository"
  cvmfs_mount ${repo} || return 1
  echo "Remove temporary"
  rmdir /var/lib/cvmfs/shared/txn || return 2
  echo "Reload"
  cvmfs_config reload || return 3
  echo "Checksum the first regular file that is around"
  md5sum $(find /cvmfs/${repo} -type f | head -n1) || return 4

  return 0
}

