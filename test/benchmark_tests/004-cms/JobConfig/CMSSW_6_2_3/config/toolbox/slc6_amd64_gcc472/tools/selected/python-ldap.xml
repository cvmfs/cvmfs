<tool name="python-ldap" version="2.3.5-cms5">
  <info url="http://python-ldap.sourceforge.net/"/>
  <client>
    <environment name="PYTHON_LDAP_BASE" default="/cvmfs/cms.cern.ch/slc6_amd64_gcc472/external/python-ldap/2.3.5-cms5"/>
    <environment name="PYTHON_LDAP_PYPATH" default="$PYTHON_LDAP_BASE/lib/python2.7/site-packages"/>
  </client>
  <runtime name="PYTHONPATH" value="$PYTHON_LDAP_PYPATH" type="path"/>
  <use name="openssl"/>
  <use name="openldap"/>
  <use name="python"/>
  <architecture name="slc6_*">
    <use name="cyrus-sasl"/>
  </architecture>
</tool>
